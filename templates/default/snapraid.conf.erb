#
# Generated by Chef for <%= node['hostname'] %>
#
# Local modifications will be overwritten.

# Default configuration borrowed from: http://zackreed.me/articles/72-snapraid-on-ubuntu-12-04

<% node['snapraid']['parity_disks'].each_with_index  do |parity, index| %>
<%=index > 0 ? "#{index+1}-" : ''%>parity <%= parity %>/snapraid.parity
<% end %>

<% node['snapraid']['content_files'].each do |content| %>
content <%= content %>/snapraid.content
<% end %>

<% node['snapraid']['data_disks'].each_with_index do |disk, index| %>
disk d<%= index+1 %> <%= disk %>
<% end %>

<% node['snapraid']['exclude_list'].each do |exclude| %>
exclude <%= exclude %>
<% end %>

block_size <%= node['snapraid']['block_size'] %>
